<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >
    <ListView
        android:layout_above="@id/etNewItem"
        android:id="@+id/lvItems"
        android:layout_width="match_parent"
        android:layout_height="538dp" />
    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="5dp"
        android:onClick="onAdditem"
        android:text="ADD"
        android:layout_above="@id/lvItems"
        />

    <EditText
        android:id="@+id/etNewItem"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAddItem"
        android:layout_alignRight="@+id/btnAddItem"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="203dp"
        android:layout_marginRight="203dp"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:hint="Add a New Item Here"
        android:inputType="textPersonName" />



</RelativeLayout>

